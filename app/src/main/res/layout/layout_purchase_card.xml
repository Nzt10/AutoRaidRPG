<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/border_gray_black"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bundleType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:text="Bundle Type"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/bundleImage"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_margin="5dp"
        android:background="@drawable/treasure_chest_1" />

    <LinearLayout
        android:id="@+id/currencyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="3dp"
        android:layout_below="@+id/contentLayout"
        android:background="@drawable/border_light_green_black">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_cash"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±5200.00"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:fontFamily="monospace"
            android:textSize="12dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>