<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/character_width"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin"
    android:orientation="vertical">

    <include
        android:id="@+id/unitImageView"
        android:layout_margin="0dp"
        android:layout_width="@dimen/character_width"
        android:layout_height="@dimen/character_height"
        layout="@layout/layout_character_card"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="-1dp"
        android:gravity="center"
        android:background="@drawable/border_swamp_black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coinImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="0"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_coin" />

        <TextView
            android:id="@+id/coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="0"
            android:fontFamily="monospace"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="1000"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/buyBtn"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="BUY"
        android:fontFamily="monospace"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="-3dp"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="-1dp"
        android:textColor="@color/black"
        android:background="@drawable/border_light_green_black"
        android:padding="0dp"
        app:cornerRadius="0dp" />
</LinearLayout>